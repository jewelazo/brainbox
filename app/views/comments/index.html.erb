<div>
    <% @comments.each do |comment| %>
       <p><%= comment.body %></p>
       <% if current_user && current_user.comments.include?(comment)%>
        <div>
            <%= link_to "edit" , edit_comment_path(comment)  %>
            <div>
                <%= button_to comment_path(comment), method: :delete, form: { data: { turbo_confirm: "Are you sure?" } } do %>
                    <%= "delete" %>
                <% end %>
            </div>
        </div>
        <% end %>
    <% end %>

</div>